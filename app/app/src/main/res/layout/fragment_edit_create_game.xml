                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:text="@string/set1"
                    android:textAlignment="center"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold|italic" />

                <ImageButton
                    android:id="@+id/btnAddPtsSet1_1_p"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/green_dark"
                    android:contentDescription="@string/add_points"
                    android:src="@android:drawable/ic_input_add"
                    android:tintMode="multiply"
                    app:tint="@color/green_normal_2" />

                <TextView
                    android:id="@+id/txtPtosSet1Eq1_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="8dp"
                    android:hint="0"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@color/black" />

                <ImageButton
                    android:id="@+id/btnDelPtsSet1_1_p"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:backgroundTint="@color/green_dark"
                    android:contentDescription="@string/del_points"

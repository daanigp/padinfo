<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentLayout_Games"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Fragments.GamesListFragment">

    <LinearLayout
        android:id="@+id/layoutListado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="80dp" >

        <Button
            android:id="@+id/btnNewGame"
            android:layout_width="210dp"
            android:layout_height="55dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="35dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/newPartido"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            app:cornerRadius="20dp" />

        <TextView
            android:id="@+id/txtListaPartidosVacia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="@string/listaVaciaPartidos"
            android:textAlignment="center"
            android:visibility="gone" />

        <ListView
            android:id="@+id/listaPartidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:scrollbarThumbVertical="@drawable/scrollbar_vertical"
            tools:layout_editor_absoluteX="0dp" />

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ActivityEdit_User">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPerfil"
                android:layout_width="171dp"
                android:layout_height="173dp"
                android:layout_margin="35dp"
                app:srcCompat="@drawable/padinfo_logo" />

            <Spinner
                android:id="@+id/spinnerImage"
                android:layout_width="125dp"
                android:layout_height="45dp"
                android:entries="@array/imagenes" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="101dp"
            android:text="@string/nombre"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTxtNombre"
            android:layout_width="298dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:hint="Nombre"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_hint"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="93dp"
            android:text="@string/apellidos"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTxtApellidos"
            android:layout_width="298dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:hint="Apellidos"
            android:inputType="text"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_hint"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="115dp"
            android:text="@string/email"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTxtEmail"
            android:layout_width="298dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:background="@drawable/custom_edit_text"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/grey_hint"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnGuardarInfo"
            android:layout_width="133dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green_normal_2"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/guardar"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/btnVolverM"
            android:layout_width="133dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/red"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/cancelar"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="0dp" />

    </LinearLayout>

</ScrollView>
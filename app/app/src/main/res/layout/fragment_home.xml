<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="80dp"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".Fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageAPP"
            android:layout_width="178dp"
            android:layout_height="178dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="15dp"
            android:contentDescription="@string/imgLogo"
            android:src="@drawable/padinfo_logo" />

        <TextView
            android:id="@+id/txtBienvenida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="32dp"
            android:layout_marginRight="50dp"
            android:background="#C1C1C1"
            android:maxLines="10"
            android:text="@string/bienvenida"
            android:textAlignment="center"
            android:textColor="#0077D5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtInfoApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:layout_marginTop="5dp"
            android:background="#C1C1C1"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtInfoApp_webs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="28dp"
            android:layout_marginTop="32dp"
            android:autoLink="web"
            android:background="#C1C1C1"
            android:textAlignment="center"
            android:textColor="#0B0B0B"
            android:textColorLink="#2196F3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <VideoView
            android:id="@+id/bestShotsVideo"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

</ScrollView>


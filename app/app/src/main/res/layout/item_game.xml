<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="355dp"
            android:layout_height="102dp"
            android:background="@drawable/table_border">

            <TableRow
                android:layout_width="312dp"
                android:layout_height="38dp"
                android:background="@drawable/table_border">

                <TextView
                    android:id="@+id/txtNombreJugadoresEq1"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_border"
                    android:text="@string/nomJugEq1"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtPuntosSet1Eq1"
                    android:layout_width="58dp"
                    android:layout_height="51dp"
                    android:text="@string/numeroCero"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtPuntosSet2Eq1"
                    android:layout_width="58dp"
                    android:layout_height="51dp"
                    android:text="@string/numeroCero"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtPuntosSet3Eq1"
                    android:layout_width="58dp"
                    android:layout_height="51dp"
                    android:text="@string/numeroCero"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </TableRow>

            <TableRow
                android:layout_width="384dp"
                android:layout_height="wrap_content"
                android:background="@drawable/table_border">

                <TextView
                    android:id="@+id/txtNombreJugadoresEq2"
                    android:layout_width="157dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_border"
                    android:text="@string/nomJugEq2"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtPuntosSet1Eq2"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text="@string/numeroCero"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtPuntosSet2Eq2"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text="@string/numeroCero"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txtPuntosSet3Eq2"
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text="@string/numeroCero"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </TableRow>
        </TableLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>